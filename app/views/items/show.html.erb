<%= turbo_frame_tag dom_id(item) do %>
  <h3><%= item.name %><%= item.name %><%= item.name %></h3>
  <p><strong>Description:</strong> <%= item.description %></p>
  <p><strong>Created At:</strong> <%= item.created_at.strftime("%B %d, %Y") %></p>

  <%= link_to 'Back', items_path, data: { turbo_frame: "items" } %>
<% end %>
