<%= turbo_frame_tag dom_id(item) do %>
  <p>
    <strong>Name:</strong>
    <%= link_to item.name, item_path(item), data: { turbo_frame: dom_id(item) } %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <%= button_to 'Delete', item_path(item), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
<% end %>
