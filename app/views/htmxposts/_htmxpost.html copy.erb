<div id="<%= dom_id(htmxpost) %>" class="mb-3 p-3 border rounded shadow-sm bg-light">
  <p>
    <strong class="text-primary"><%= htmxpost.title %></strong><br>
    <span class="text-muted"><%= htmxpost.body %></span>
  </p>
  <% if htmxpost.persisted? %>
    <div class="d-flex gap-2">
      <%= link_to "Edit", edit_htmxpost_path(htmxpost), class: "btn btn-warning btn-sm", data: { 
            hx_get: edit_htmxpost_path(htmxpost), 
            hx_target: "##{dom_id(htmxpost)}", 
            hx_swap: "outerHTML" } %>
      <%= link_to "Show Here", htmxpost_path(htmxpost), class: "btn btn-primary btn-sm", data: { 
            hx_get: htmxpost_path(htmxpost), 
            hx_target: "##{dom_id(htmxpost)}", 
            hx_swap: "outerHTML", 
            hx_push: "true" } %>
      <%= link_to "Show Full", htmxpost_path(htmxpost), class: "btn btn-info btn-sm", data: { 
            hx_get: htmxpost_path(htmxpost), 
            hx_target: "#zz", 
            hx_swap: "innerHTML" } %>
      <%= link_to "Delete", htmxpost_path(htmxpost), method: :delete, class: "btn btn-danger btn-sm", data: { 
            hx_delete: htmxpost_path(htmxpost), 
            hx_target: "##{dom_id(htmxpost)}", 
            hx_swap: "delete" } %>
    </div>
  <% else %>
    <em class="text-danger">Unsaved Post</em>
  <% end %>
</div>
